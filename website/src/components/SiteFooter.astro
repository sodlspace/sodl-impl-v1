---
const year = new Date().getFullYear();
const email = 'sodl.space@gmail.com';
const github = 'https://github.com/sodlspace/sodl-impl-v1';
---

<footer
  class="border-t border-neutral-800 bg-neutral-950 px-6 py-10"
  role="contentinfo"
  aria-label="Site footer"
>
  <div class="mx-auto max-w-7xl">
    <div class="flex flex-col items-center gap-6 sm:flex-row sm:justify-between">
      <!-- Brand + badge -->
      <div class="flex flex-col items-center gap-3 sm:items-start">
        <div class="flex items-center gap-2">
          <span class="font-mono text-lg font-bold text-white">
            <span class="text-indigo-400">&lt;</span>SODL<span class="text-indigo-400">/&gt;</span>
          </span>
          <!-- Active development badge -->
          <span
            class="inline-flex items-center gap-1 rounded-full border border-indigo-500/30 bg-indigo-500/10 px-2 py-0.5 text-[10px] font-semibold uppercase tracking-wider text-indigo-400"
            aria-label="Status: Active Development v1.0.0"
          >
            <span class="h-1 w-1 rounded-full bg-indigo-400" aria-hidden="true"></span>
            v1.0.0 · Active Dev
          </span>
        </div>
        <p class="text-xs text-neutral-500">
          Specification Orchestration Definition Language
        </p>
      </div>

      <!-- Links -->
      <div class="flex items-center gap-6 text-sm">
        <a
          href={`mailto:${email}`}
          class="text-neutral-500 hover:text-neutral-300 transition-colors"
          aria-label={`Contact: ${email}`}
        >
          {email}
        </a>
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="text-neutral-500 hover:text-neutral-300 transition-colors"
          aria-label="SODL on GitHub (new tab)"
        >
          GitHub ↗
        </a>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 border-t border-neutral-800 pt-6 text-center text-xs text-neutral-600">
      <p>© {year} SODL Project. All rights reserved.</p>
    </div>
  </div>
</footer>
