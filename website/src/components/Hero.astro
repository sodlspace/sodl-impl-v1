---
interface Props {
  tagline: string;
  subtitle: string;
  primaryCTA: string;
  secondaryCTA: string;
  primaryCTAHref?: string;
  secondaryCTAHref?: string;
}

const {
  tagline,
  subtitle,
  primaryCTA,
  secondaryCTA,
  primaryCTAHref = '/getting-started/',
  secondaryCTAHref = 'https://github.com/sodlspace/sodl-impl-v1',
} = Astro.props;

const headingId = 'hero-heading';
---

<section
  class="relative overflow-hidden px-6 py-24 sm:py-32 lg:py-40"
  aria-labelledby={headingId}
>
  <!-- Background glow -->
  <div
    class="absolute inset-0 -z-10 overflow-hidden"
    aria-hidden="true"
  >
    <div
      class="absolute left-1/2 top-0 -translate-x-1/2 w-[800px] h-[600px] rounded-full bg-indigo-900/20 blur-3xl"
    ></div>
    <div
      class="absolute left-1/4 bottom-0 w-[400px] h-[300px] rounded-full bg-violet-900/15 blur-3xl"
    ></div>
  </div>

  <!-- Grid pattern -->
  <div
    class="absolute inset-0 -z-10 bg-[linear-gradient(to_right,#ffffff08_1px,transparent_1px),linear-gradient(to_bottom,#ffffff08_1px,transparent_1px)] bg-[size:48px_48px]"
    aria-hidden="true"
  ></div>

  <div class="mx-auto max-w-4xl text-center">
    <!-- Active Development badge -->
    <div class="mb-8 flex justify-center">
      <span
        class="inline-flex items-center gap-2 rounded-full border border-indigo-500/30 bg-indigo-500/10 px-4 py-1.5 text-xs font-semibold text-indigo-400 uppercase tracking-wider"
        aria-label="Status: Active Development"
      >
        <span
          class="h-1.5 w-1.5 rounded-full bg-indigo-400 animate-pulse"
          aria-hidden="true"
        ></span>
        Active Development
      </span>
    </div>

    <!-- Main heading -->
    <h1
      id={headingId}
      class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl"
    >
      {tagline}
    </h1>

    <!-- Subtitle -->
    <p class="mt-6 text-lg leading-8 text-neutral-400 max-w-2xl mx-auto">
      {subtitle}
    </p>

    <!-- CTAs -->
    <div class="mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
      <!-- Primary CTA -->
      <a
        href={primaryCTAHref}
        class="inline-flex items-center gap-2 rounded-lg bg-indigo-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-500/25 hover:bg-indigo-500 transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500"
        aria-label={primaryCTA}
      >
        {primaryCTA}
        <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
        </svg>
      </a>

      <!-- Secondary CTA -->
      <a
        href={secondaryCTAHref}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-lg border border-neutral-700 bg-transparent px-6 py-3 text-sm font-semibold text-neutral-300 hover:border-neutral-500 hover:text-white transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-neutral-500"
        aria-label={`${secondaryCTA} â€” opens GitHub in new tab`}
      >
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z" />
        </svg>
        {secondaryCTA}
      </a>
    </div>
  </div>
</section>
