---
import Navigation from '../components/Navigation.astro';
import SiteFooter from '../components/SiteFooter.astro';

const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search - SODL</title>
    <meta name="description" content="Search SODL documentation" />
    <style>
      @import "../styles/global.css";
    </style>
  </head>

  <body class="bg-neutral-950 text-neutral-100 antialiased" data-pagefind-body>
    <Navigation currentPath="/search/" />

    <main id="main-content" class="min-h-screen px-6 py-20">
      <div class="mx-auto max-w-4xl">
        <h1 class="text-3xl font-bold text-white sm:text-4xl mb-8">
          Search
        </h1>

        <!-- Pagefind UI renders here -->
        <div id="search"></div>
      </div>
    </main>

    <SiteFooter />
  </body>
</html>
