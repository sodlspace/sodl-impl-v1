{
  "version": "2.0.0",
  "tasks": {
    "compile": {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    "watch": {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  }
}
